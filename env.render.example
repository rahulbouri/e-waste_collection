# Render Deployment Environment Variables
# Copy these to your Render environment variables

# Render automatically sets these - DO NOT override them
# PORT=10000 (set by Render automatically)
# HOST=0.0.0.0 (set by Render automatically)

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=production

# Database Configuration (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Email Configuration (for sending OTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Redis Configuration (Render Redis)
REDIS_URL=redis://username:password@host:port/database_number

# OTP Configuration
OTP_TTL_SECONDS=300
OTP_LENGTH=6

# Frontend Configuration
VITE_API_URL=https://your-render-app.onrender.com/api

# Production URLs
FRONTEND_URL=https://your-render-app.onrender.com
BACKEND_URL=https://your-render-app.onrender.com/api

# Render-specific settings
POSTGRES_DB=waste_collection
POSTGRES_USER=postgres 